{% extends 'layout/base.njk' %}

{% block content %}
<div class="page mypage history">
    <div class="history__head">
        <div class="wrap">
            <div class="row period">
                <a href="" class="active">1주일</a>
                <a href="">1개월</a>
                <a href="">9월</a>
                <a href="">10월</a>
                <a href="">이전내역</a>
            </div>
            <div class="row">
                <label for="om1" class="mypage-select">
                    <select name="" id="om1" class="full">
                        <option value="">전체상태</option>
                    </select>
                </label>
            </div>
        </div>
    </div>
    <div class="history__body">
        <div class="history__item">
            <div class="history__state">
                <div class="wrap">
                    <h4 class="stateValue stateValue__delivery">배송중</h4>
                    <a href="" class="btn btn--small border-gray color-gray">주문상세보기</a>
                </div>
            </div>
